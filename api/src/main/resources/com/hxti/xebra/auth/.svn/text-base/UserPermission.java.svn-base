package com.hxti.xebra.auth;

import java.io.IOException;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * This interface must be extended by any user authentication class.
 * @author Kenny
 */
public interface UserPermission {
	/**
	 * Checks if a user has permission to access the content in
     * question and send an HTTP 401 authorization challenge if not.
     * If this returns false, calling servlets should return
     * IMMEDIATELY and must NOT write any additional data to the
     * response object.
     * 
	 * @param request	the servlet request
	 * @param response	the servlet response
	 * @return			true if the user is permitted, false otherwise
	 * @throws IOException
	 */
    public boolean userPermitted(HttpServletRequest request, 
    		HttpServletResponse response) throws IOException;
}
