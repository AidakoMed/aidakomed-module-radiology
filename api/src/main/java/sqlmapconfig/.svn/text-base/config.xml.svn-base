<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMapConfig
   PUBLIC "-//iBATIS.com//DTD SQL Map Config 2.0//EN"
   "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
             
   <properties resource="sqlmapconfig/config.properties"/>
   
   <settings cacheModelsEnabled="false"
             lazyLoadingEnabled="false" />

   <typeAlias alias="AEPeer"            type="com.hxti.edge.pacs.data.AEPeer"                  />
   <typeAlias alias="Organization"      type="com.hxti.edge.pacs.data.Organization"            />
   <typeAlias alias="SCP"               type="com.hxti.edge.pacs.data.ServiceClassProvider"    />
   <typeAlias alias="Study"             type="com.hxti.edge.pacs.data.Study"                   />
   <typeAlias alias="Series"            type="com.hxti.edge.pacs.data.Series"                  />
   <typeAlias alias="Instance"          type="com.hxti.edge.pacs.data.Instance"                />
   <typeAlias alias="StudyQuery"        type="com.hxti.edge.pacs.data.query.StudyQuery"        />
   <typeAlias alias="SeriesQuery"       type="com.hxti.edge.pacs.data.query.SeriesQuery"       />
   <typeAlias alias="InstanceQuery"     type="com.hxti.edge.pacs.data.query.InstanceQuery"     />
   
   <transactionManager type="JDBC">
      <dataSource type="SIMPLE">
         <property name="JDBC.Driver"         value="${JDBC.Driver}"        />
         <property name="JDBC.ConnectionURL"  value="${JDBC.ConnectionURL}" />
         <property name="JDBC.Username"       value="${JDBC.Username}"      />
         <property name="JDBC.Password"       value="${JDBC.Password}"      />
      </dataSource>
   </transactionManager>

   <sqlMap resource="sqlmapconfig/AEPeers.xml"           />
   <sqlMap resource="sqlmapconfig/SCP.xml"               />
   <sqlMap resource="sqlmapconfig/Study.xml"             />
   <sqlMap resource="sqlmapconfig/Series.xml"            />
   <sqlMap resource="sqlmapconfig/Instance.xml"          />
   <sqlMap resource="sqlmapconfig/Properties.xml"        />
</sqlMapConfig>
