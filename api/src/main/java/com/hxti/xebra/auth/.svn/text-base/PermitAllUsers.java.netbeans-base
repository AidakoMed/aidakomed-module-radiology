package com.hxti.xebra.auth;

import java.io.IOException;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Implementation of {@link UserPermission} that allows anyone.
 * @author Kenny
 */
public class PermitAllUsers implements UserPermission {

	public boolean userPermitted(HttpServletRequest request,
			HttpServletResponse response) throws IOException {
		return true;
	}

}